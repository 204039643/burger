<div class="burger image text-center">
  <img
    src="https://media1.s-nbcnews.com/j/newscms/2019_21/2870431/190524-classic-american-cheeseburger-ew-207p_d9270c5c545b30ea094084c7f2342eb4.fit-2000w.jpg"
    width="500" height="300" alt="burger image">
</div>
<div class="jumbotron text-center" style="background-color:rgb(240, 216, 171);">
  <h1 class="display-1">Eat Da Burger!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="col-sm">
    <h2>Devoured!</h2>
  </div>
  <div class="col-sm">
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="row">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <textarea id="bu" name="name">
      </textarea>
      </div>

